<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <LinearLayout
        android:id="@+id/layoutLevel1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/multiSelectListCloseDialog"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:src="@drawable/ic_close" />

        <TextView
            android:id="@+id/multiSelectListDialogTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="0.8"
            android:paddingStart="10dp"
            android:text="@string/add_treatment_medicine"
            android:textColor="@color/primary_text"
            android:textSize="23sp" />

        <Button
            android:id="@+id/opd_btn_save_drug"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:background="@color/transparent"
            android:gravity="center"
            android:text="@string/drug_picker_dialog_save"
            android:textColor="@color/light_grey"
            android:textSize="20sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutLevel3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLevel1"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="30dp"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <TextView
            android:id="@+id/txtSelectedItemInMultiSelectList"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start"
            android:paddingStart="20dp"
            android:textColor="@color/primary_text"
            android:textSize="25sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="9dp"
            android:layout_marginEnd="20dp"
            android:background="@color/primary_text" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtTreatmentDosage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLevel3"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:text="@string/dosage"
        android:textColor="@color/primary_text"
        android:textSize="24sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/layoutLevel4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTreatmentDosage"
        android:layout_marginStart="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/multi_select_search_view_bg"
        android:padding="10dp">

        <EditText
            android:id="@+id/edtTreatmentDosage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtTreatmentDuration"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layoutLevel4"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:text="@string/duration"
        android:textColor="@color/primary_text"
        android:textSize="24sp"
        android:textStyle="normal" />

    <LinearLayout
        android:id="@+id/layoutLevel5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtTreatmentDuration"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/multi_select_search_view_bg"
        android:padding="10dp">

        <EditText
            android:id="@+id/edtTreatmentDuration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/transparent" />
    </LinearLayout>
</RelativeLayout>